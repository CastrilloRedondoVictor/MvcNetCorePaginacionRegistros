@model List<Departamento>

@{
	ViewData["Title"] = "PaginarGrupoDepartamento";

	int numPagina = 1;
	int numRegistros = (int)ViewData["Registros"];
}

<h1>Paginar Grupo Departamento</h1>



<hr />
<ul class="list-group list-group-horizontal">
	@for (int i = 1; i <= numRegistros; i += 2)
	{
		<li class="list-group-item list-group-item-success">
			<a asp-action="PaginarGrupoDepartamento" asp-route-posicion="@i">Página  @i</a>
		</li>
	}
</ul>
<hr />


<table  class="table  table-warning">
	<thead>
		<tr>
			<th>ID</th>
			<th>NOMBRE</th>
			<th>LOCALIDAD</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.IdDepartamento</td>
				<td>@item.Nombre</td>
				<td>@item.Localidad</td>
			</tr>
		}
	</tbody>
</table>
